class Solution {
    public int countMatches(List<List<String>> items, String ruleKey, String ruleValue) {
        int count=0;
        int index;
        if (ruleKey.equals("type")){
            index=0;
        }
        else if(ruleKey.equals("color")){
            index=1;
        }
        else{
            index=2;
        }
        
        for(List<String> str : items){
            if (str.get(index).equals(ruleValue))        //get gives element present in a index given (listname.get(index))
                count++;
            
        }
        return count;
    }
}
